# Flow Farm 项目环境变量模板
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 应用程序基础配置
# =============================================================================

# 应用名称和版本
APP_NAME=Flow_Farm
APP_VERSION=1.0.0
APP_ENV=development  # development, production, testing

# 调试模式
DEBUG=true
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# ADB和设备配置
# =============================================================================

# ADB可执行文件路径（Windows下通常是adb.exe的完整路径）
ADB_PATH=D:\Android\platform-tools\adb.exe

# 设备连接配置
MAX_DEVICES=10
DEVICE_TIMEOUT=30
ADB_PORT=5037

# =============================================================================
# 数据库配置
# =============================================================================

# SQLite数据库文件路径
DATABASE_PATH=data/flow_farm.db

# 数据库连接池配置
DB_POOL_SIZE=5
DB_TIMEOUT=30

# =============================================================================
# 安全和加密配置
# =============================================================================

# 应用程序密钥（用于数据加密，请使用强密码）
SECRET_KEY=your_secret_key_change_this_in_production

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_HOURS=24

# 密码加密盐值
BCRYPT_ROUNDS=12

# =============================================================================
# 用户权限配置
# =============================================================================

# 默认管理员账号（首次启动创建）
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123456
DEFAULT_ADMIN_EMAIL=admin@flowfarm.local

# 会话超时（分钟）
SESSION_TIMEOUT=30

# =============================================================================
# 任务执行配置
# =============================================================================

# 默认任务配置
DEFAULT_OPERATION_INTERVAL=5  # 操作间隔（秒）
DEFAULT_RETRY_COUNT=3         # 重试次数
DEFAULT_TIMEOUT=30            # 操作超时（秒）

# 任务调度配置
MAX_CONCURRENT_TASKS=5
TASK_QUEUE_SIZE=100

# =============================================================================
# 平台特定配置
# =============================================================================

# 小红书配置
XHS_APP_PACKAGE=com.xingin.xhs
XHS_MAIN_ACTIVITY=com.xingin.xhs.index.v2.IndexActivityV2
XHS_MAX_FOLLOWS_PER_SESSION=50
XHS_OPERATION_DELAY_MIN=3
XHS_OPERATION_DELAY_MAX=8

# 抖音配置
DOUYIN_APP_PACKAGE=com.ss.android.ugc.aweme
DOUYIN_MAIN_ACTIVITY=com.ss.android.ugc.aweme.splash.SplashActivity
DOUYIN_MAX_FOLLOWS_PER_SESSION=30
DOUYIN_OPERATION_DELAY_MIN=2
DOUYIN_OPERATION_DELAY_MAX=6

# =============================================================================
# GUI界面配置
# =============================================================================

# 主题配置
THEME_MODE=system  # light, dark, system
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# 字体配置
FONT_FAMILY=微软雅黑
FONT_SIZE=12

# =============================================================================
# 日志配置
# =============================================================================

# 日志文件路径
LOG_DIR=logs
LOG_FILE=app.log
ERROR_LOG_FILE=error.log
DEVICE_LOG_FILE=device.log

# 日志轮转配置
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# =============================================================================
# 网络配置
# =============================================================================

# HTTP请求配置
HTTP_TIMEOUT=30
HTTP_RETRIES=3
HTTP_BACKOFF_FACTOR=1

# 代理配置（如需要）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# =============================================================================
# 性能和资源配置
# =============================================================================

# 内存限制（MB）
MAX_MEMORY_USAGE=1024

# 临时文件配置
TEMP_DIR=temp
CACHE_DIR=cache
CACHE_SIZE_LIMIT=100MB

# 并发配置
MAX_WORKER_THREADS=4
IO_THREAD_POOL_SIZE=8

# =============================================================================
# 备份和恢复配置
# =============================================================================

# 自动备份配置
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=backups

# =============================================================================
# 开发和调试配置
# =============================================================================

# 开发模式特定配置
DEV_AUTO_RELOAD=true
DEV_MOCK_DEVICES=false
DEV_SKIP_AUTH=false

# 测试配置
TEST_DATABASE_PATH=:memory:
TEST_TIMEOUT=10

# =============================================================================
# 监控和统计配置
# =============================================================================

# 性能监控
ENABLE_PERFORMANCE_MONITORING=true
STATS_COLLECTION_INTERVAL=60

# 错误报告
ENABLE_ERROR_REPORTING=true
ERROR_REPORT_ENDPOINT=

# =============================================================================
# 更新和维护配置
# =============================================================================

# 自动更新检查
CHECK_UPDATES=true
UPDATE_CHECK_INTERVAL_HOURS=24
UPDATE_SERVER_URL=

# 维护模式
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=系统维护中，请稍后再试

# =============================================================================
# 许可和合规配置
# =============================================================================

# 使用条款接受
TERMS_ACCEPTED=false
PRIVACY_POLICY_ACCEPTED=false

# 使用限制
MAX_DAILY_OPERATIONS=1000
RATE_LIMIT_PER_MINUTE=10

# =============================================================================
# 自定义扩展配置
# =============================================================================

# 插件系统
ENABLE_PLUGINS=true
PLUGIN_DIR=plugins

# 自定义脚本
CUSTOM_SCRIPTS_DIR=scripts/custom

# =============================================================================
# 注意事项
# =============================================================================

# 1. 生产环境中请修改所有默认密码和密钥
# 2. 确保敏感信息不被提交到版本控制系统
# 3. 定期更新密钥和凭据
# 4. 根据实际部署环境调整路径和配置值
# 5. 遵守相关平台的使用条款和法律法规
